<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.a.harjoitus2.MainActivity">

    <Button
        android:text="Launch PostActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/launchPostActivityBtn"
        android:onClick="launchPostActivity"/>

    <Button
        android:text="Launch XmlActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/launchXmlActivityButton"
        android:onClick="launchXmlActivity"
        />

    <Button
        android:text="Launch Parts Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/launchPartActivityButton"
        android:onClick="launchPartActivity"
        />
</LinearLayout>
